From cd00ccb21c3a40949eaf8e079984f591ac49adb5 Mon Sep 17 00:00:00 2001
From: gl-luochongjun <luochongjun@gl-inet.com>
Date: Fri, 9 Sep 2022 19:25:56 +0800
Subject: [PATCH] adjust mt2500 led and hnat

---
 .../arch/arm64/boot/dts/mediatek/mt7981-gl-mt2500.dts      | 7 ++++---
 1 file changed, 4 insertions(+), 3 deletions(-)

diff --git a/target/linux/mediatek/files-5.4/arch/arm64/boot/dts/mediatek/mt7981-gl-mt2500.dts b/target/linux/mediatek/files-5.4/arch/arm64/boot/dts/mediatek/mt7981-gl-mt2500.dts
index d94cfda527..8934f87811 100755
--- a/target/linux/mediatek/files-5.4/arch/arm64/boot/dts/mediatek/mt7981-gl-mt2500.dts
+++ b/target/linux/mediatek/files-5.4/arch/arm64/boot/dts/mediatek/mt7981-gl-mt2500.dts
@@ -28,6 +28,7 @@
 		lan = "eth1";
 		usb-port = "1-1";
 		flash_size = <8192>;
+		temperature = "/sys/devices/virtual/thermal/thermal_zone0/temp";
 		factory_data {
 			device_mac = "/dev/mmcblk0boot1", "0x0a";
 			device_ddns = "/dev/mmcblk0boot1", "0x10";
@@ -58,19 +59,19 @@
 		compatible = "gpio-leds";
 
 		led@0 {
-			label = "blue:vpn";
+			label = "vpn";
 			gpios = <&pio 31 GPIO_ACTIVE_LOW>;
 		};
 
 		led@1 {
 			label = "white:system";
 			gpios = <&pio 30 GPIO_ACTIVE_LOW>;
-			default-state = "on";
 		};
 
 		led@2 {
 			label = "blue:system";
 			gpios = <&pio 29 GPIO_ACTIVE_LOW>;
+			default-state = "on";
 		};
 	};
 };
@@ -130,7 +131,7 @@
 	};
 };
 &hnat {
-	mtketh-wan = "eth1";
+	mtketh-wan = "eth0";
 	mtketh-lan = "eth1";
 	mtketh-ppd = "eth1";
 	mtketh-max-gmac = <2>;
-- 
